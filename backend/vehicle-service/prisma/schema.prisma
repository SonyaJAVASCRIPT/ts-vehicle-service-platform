generator client {
  provider = "prisma-client-js"
  output   = "../generated/vehicles"
}

datasource db {
  provider = "postgresql"
  url      = env("VEHICLE_DATABASE_URL")
}

model Vehicle {
  id      Int     @id @default(autoincrement())
  plate   String?
  brand   String?
  ownerId Int?    @unique()
  fines   Fine[]

  @@map("vehicle")
}

model Fine {
  id          Int     @id @default(autoincrement())
  date        String
  description String
  amount      Float
  status      Boolean @default(false)
  vehicleId   Int
  vehicle     Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@map("fine")
}
